<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".VideosActivity"
        android:background="@drawable/gradients">

    <TextView
            android:text="Android Development"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:layout_margin="50dp"
            android:id="@+id/textView"/>

        <Button
                android:text="Installation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/v1"

                tools:layout_editor_absoluteY="150dp"
                tools:layout_editor_absoluteX="161dp"/>
        <Button
                android:text="Layouts"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" android:id="@+id/v2" tools:layout_editor_absoluteY="259dp"
                tools:layout_editor_absoluteX="161dp"/>
        <Button
                android:text="Activity"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" android:id="@+id/v3" tools:layout_editor_absoluteY="57dp"
                tools:layout_editor_absoluteX="161dp"/>
        <Button
                android:text="Multiple Screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/v4"/>
        <Button
                android:text="List View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/v5"/>
        <Button
                android:text="Recycle View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/v6"/>
        <Button
                android:text="Count down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/v7"/>
        <Button
                android:text="API's"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/v8"/>
        <Button
                android:text="Database"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/v9"/>
    <Button
            android:text="MiniProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/v10"/>


</LinearLayout>

